#@base <http://purl.org/ontology/studio/mobile#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix mo: <http://purl.org/ontology/mo/> .
@prefix mt: <http://purl.org/ontology/studio/multitrack#> .
@prefix dmo: <???/dmo#> .
@prefix : <#> .


<#>
	a owl:Ontology ;
	rdfs:comment "An ontology for describing playback rendering features on mobile devices" .

:Rendering
	a owl:Class ;
	rdfs:subClassOf mt:MultitrackProject ;
	rdfs:comment "" .

:Mapping
	a owl:Class ;
	rdfs:comment "" . #make restriction to one dimension

:ProductMapping
	a owl:Class ;
	rdfs:subClassOf :Mapping ;
	rdfs:comment "Mapping that multiplies its dimensions" .

:SumMapping
	a owl:Class ;
	rdfs:subClassOf :Mapping ;
	rdfs:comment "Mapping that adds its dimensions" .

:MappingDimension
	a owl:Class ;
	rdfs:comment "" .

:Function
	a owl:Class .

:LinearFunction
	a owl:Class ;
	rdfs:subClassOf :Function .

:SymmetricalFunction
	a owl:Class ;
	rdfs:subClassOf :Function .

:TriangleFunction
	a owl:Class ;
	rdfs:subClassOf :SymmetricalFunction .

:RectangleFunction
	a owl:Class ;
	rdfs:subClassOf :SymmetricalFunction .

:InterpolationFunction
	a owl:Class ;
	rdfs:subClassOf :Function .

:MobileControl 
	a owl:Class ;
	rdfs:comment "" .


#Sensor Controls

:SensorControl 
	a owl:Class ;
	rdfs:subClassOf :MobileControl ;
	rdfs:comment "" .

:AccelerometerX
	a owl:Class ;
	rdfs:subClassOf :SensorControl ;
	rdfs:comment "" .
	
:AccelerometerY
	a owl:Class ;
	rdfs:subClassOf :SensorControl ;
	rdfs:comment "" .

:AccelerometerZ
	a owl:Class ;
	rdfs:subClassOf :SensorControl ;
	rdfs:comment "" .

:TiltX
	a owl:Class ;
	rdfs:subClassOf :SensorControl ;
	rdfs:comment "" .
	
:TiltY
	a owl:Class ;
	rdfs:subClassOf :SensorControl ;
	rdfs:comment "" .

:GeolocationLatitude
	a owl:Class ;
	rdfs:subClassOf :SensorControl ;
	rdfs:comment "" .

:GeolocationLongitude
	a owl:Class ;
	rdfs:subClassOf :SensorControl ;
	rdfs:comment "" .

:GeolocationDistance
	a owl:Class ;
	rdfs:subClassOf :SensorControl ;
	rdfs:comment "" .

:CompassHeading
	a owl:Class ;
	rdfs:subClassOf :SensorControl ;
	rdfs:comment "" .

#UI Controls

:UIControl
	a owl:Class ;
	rdfs:subClassOf :MobileControl ;
	rdfs:comment "" .

:Slider
	a owl:Class ;
	rdfs:subClassOf :UIControl ;
	rdfs:comment "" .

:Toggle
	a owl:Class ;
	rdfs:subClassOf :UIControl ;
	rdfs:comment "" .

:Button
	a owl:Class ;
	rdfs:subClassOf :UIControl ;
	rdfs:comment "" .

#Autonomous Controls

:AutoControl
	a owl:Class ;
	rdfs:subClassOf :MobileControl ;
	rdfs:comment "" .

:Random
	a owl:Class ;
	rdfs:subClassOf :AutoControl ;
	rdfs:comment "" .

:GraphControl
	a owl:Class ;
	rdfs:subClassOf :AutoControl ;
	rdfs:comment "" .


#Global and control parameters

:MobileParameter
	a owl:Class ;
	rdfs:subClassOf mt:AutomationParameter ;
	rdfs:comment "" .

:GlobalParameter
	a owl:Class ;
	rdfs:subClassOf :MobileParameter ;
	rdfs:comment "" .

:ListenerOrientation
	a owl:Class ;
	rdfs:subClassOf :GlobalParameter ;
	rdfs:comment "" .

:ControlParameter
	a owl:Class ;
	rdfs:subClassOf :MobileParameter ;
	rdfs:comment "" .

:StatsFrequency
	a owl:Class ;
	rdfs:subClassOf :ControlParameter ;
	rdfs:comment "" .

:LeapingProbability
	a owl:Class ;
	rdfs:subClassOf :ControlParameter ;
	rdfs:comment "" .

:ContinueAfterLeaping
	a owl:Class ;
	rdfs:subClassOf :ControlParameter ;
	rdfs:comment "" .


#PROPERTIES

#Rendering properties

:hasDMO
	a owl:ObjectProperty, owl:FunctionalProperty ;
	rdfs:domain :Rendering ; 
	rdfs:range dmo:DMO ;
	rdfs:comment "" .

:hasMapping
	a owl:ObjectProperty ;
	rdfs:domain :Rendering ; 
	rdfs:range :Mapping ;
	rdfs:comment "" .

#Mapping properties

:hasDimension
	a owl:ObjectProperty ;
	rdfs:domain :Mapping ; 
	rdfs:range :MappingDimension ;
	rdfs:comment "" .

:fromControl
	a owl:ObjectProperty ;
	rdfs:domain :MappingDimension ;
	rdfs:range :MobileControl ;
	rdfs:comment "" .

:hasFunction
	a owl:ObjectProperty ;
	rdfs:domain :MappingDimension ;
	rdfs:range :Function ;
	rdfs:comment "" .

:toDMO
	a owl:ObjectProperty ;
	rdfs:domain :Mapping ;
	rdfs:range dmo:DMO ;
	rdfs:comment "" .

:toDMOParameter
	a owl:ObjectProperty ;
	rdfs:domain :Mapping ;
	rdfs:range dmo:Parameter ;
	rdfs:comment "" .

:toMobileParameter
	a owl:ObjectProperty ;
	rdfs:domain :Mapping ;
	rdfs:range :MobileParameter ;
	rdfs:comment "" .

:hasMultiplier
	a owl:DatatypeProperty, owl:FunctionalProperty ;
	rdfs:domain :MappingDimension ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .

:hasAddend
	a owl:DatatypeProperty, owl:FunctionalProperty ;
	rdfs:domain :MappingDimension ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .

:hasModulus
	a owl:DatatypeProperty, owl:FunctionalProperty ;
	rdfs:domain :MappingDimension ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .

#Function properties

:hasPosition
	a owl:DatatypeProperty ;
	rdfs:domain :SymmetricalFunction ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .

:hasRange
	a owl:DatatypeProperty ;
	rdfs:domain :SymmetricalFunction ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .

:hasPoint
	a owl:DatatypeProperty ;
	rdfs:domain :InterpolationFunction ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .
